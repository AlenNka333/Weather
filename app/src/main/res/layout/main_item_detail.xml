<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:scaleType="centerInside"
            tools:src="@mipmap/ic_launcher" />


        <RelativeLayout
            android:id="@+id/weather_list_text_layout"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="@color/colorItems"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22dp"
            android:layout_toEndOf="@id/weatherIcon">

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginEnd="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:text="Temperature" />

            <TextView
                android:id="@+id/weather_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="18sp"
                tools:text="Title" />

            <TextView
                android:id="@+id/weather_list_subtitle"
                android:layout_width="105dp"
                android:layout_height="29dp"
                android:layout_below="@+id/weather_list_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="19dp"
                android:layout_toStartOf="@+id/temperature"
                android:ellipsize="end"
                android:fontFamily="@font/josefinsans_semibolditalic"
                android:maxLines="3"
                android:textSize="16sp"
                tools:text="Subtitle" />

        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
